{
    "hooks": {
        "Notification": [
            {
                "hooks": [
                    {
                        "command": "sh ~/.claude/notification.sh",
                        "type": "command"
                    }
                ],
                "matcher": ".*"
            }
        ],
        "task-completed": [
            {
                "hooks": [
                    {
                        "command": "sh ~/.claude/notification.sh", 
                        "type": "command"
                    }
                ],
                "matcher": ".*"
            }
        ],
        "command-completed": [
            {
                "hooks": [
                    {
                        "command": "sh ~/.claude/notification.sh",
                        "type": "command"
                    }
                ],
                "matcher": ".*"
            }
        ]
    },
    "model": "sonnet",
    "permissions": {
        "allow": [
            "WebFetch",
            "WebSearch",
            "Read",
            "Bash",
            "mcp__context7-mcp",
            "mcp__grep-mcp",
            "mcp__jira-mcp",
            "mcp__slack-mcp",
            "mcp__gitlab-mcp",
            "mcp__shadcn-mcp",
            "mcp__gitmcp-bubletea",
            "mcp__gitmcp-gum",
            "mcp__lipgloss-mcp",
            "mcp__gitmcp-mobx",
            "mcp__github-mcp",
            "mcp__chrome-mcp"
        ],
        "defaultMode": "plan"
    },
    "statusLine": {
        "command": "/Users/dima/.claude/statusline",
        "type": "command"
    }
}
