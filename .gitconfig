[user]
    name         = d.vakatsiienko
    email        = imagnum.satellite@gmail.com

[alias]
    q            = ! git commit -a -m \"quick fix\" && git push
    lg1          = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    lg2          = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
    lg           = !"git lg1"
    s            = status -s
    c            = commit
    ca           = commit -a
    cm           = commit -m
    cma          = commit -a -m
    sl           = stash list
    ss           = stash save
    sp           = stash pop
    a            = add
    ch           = checkout
    chb          = checkout -b
    b            = branch
    ba           = branch -a
    bd           = branch -d
    la           = "!git config -l | grep alias | cut -c 7-"
    pl           = pull
    p            = push
    pu           = push --set-upstream origin
    cl           = clone
    rau          = remote add --set-upstream origin
    r            = reset
    r1           = reset HEAD^
    r2           = reset HEAD^^
    rh           = reset --hard
    rh1          = reset HEAD^ --hard
    rh2          = reset HEAD^^ --hard

[core]
    excludesfile = /Users/mike/.gitignore_global
    editor       = vim
