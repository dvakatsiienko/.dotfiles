{
    "name": "dotfiles",
    "version": "0.0.1",
    "author": "Dima Vakatsiienko <imagnum.satellite@gmail.com>",
    "scripts": {
        "install-macos": "zx ./script/install-macos.mjs",
        "install-dotfiles": "zx ./script/install-dotfiles.mjs",
        "list-symlinks": "zx ./script/list-symlinks.mjs",
        "untrack-dotfile": "zx ./script/untrack-dotfile.mjs",
        "lib:add": "python3 ./.clauderc/scripts/libsource-add.py",
        "lib:list": "python3 ./.clauderc/scripts/libsource-list.py",
        "lib:update": "python3 ./.clauderc/scripts/libsource-update.py",
        "lib:delete": "python3 ./.clauderc/scripts/libsource-delete.py",
        "lib:restore": "python3 ./.clauderc/scripts/libsource-restore.py",
        "lib:read": "python3 ./.clauderc/scripts/libsource-read.py",
        "statusline:build": "cd ./.clauderc/statusline/statusline-go && go build -o bin main.go",
        "check": "biome check --write"
    },
    "dependencies": {
        "zx": "8.8.0"
    },
    "devDependencies": {
        "@biomejs/biome": "2.2.0",
        "biome-config-polished": "0.0.2",
        "prettier": "3.6.2",
        "prettier-config-polished": "0.0.6"
    },
    "engines": {
        "pnpm": ">=10.14.0",
        "node": ">=22.17.0"
    }
}
